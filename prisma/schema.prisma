generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  phone          String
  membershipPlan String
  startDate      DateTime
  endDate        DateTime
  createdAt      DateTime @default(now())
}

model Trainer {
  id        Int      @id @default(autoincrement())
  name      String
  specialty String
  photo     String   @default("https://via.placeholder.com/300")
  bio       String
  createdAt DateTime @default(now())
  classes   Class[] // ✅ EKLENDİ: Bir antrenörün birden fazla dersi olabilir
}

model Class {
  id          Int      @id @default(autoincrement())
  title       String
  trainerId   Int
  trainer     Trainer  @relation(fields: [trainerId], references: [id])
  day         String
  time        String
  description String
  createdAt   DateTime @default(now())
}

model MembershipPlan {
  id       Int    @id @default(autoincrement())
  name     String @unique
  price    Float
  features Json // ✅ Değiştirildi: String[] → Json
  duration Int
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String // hashlenmiş
  createdAt DateTime @default(now())
}
